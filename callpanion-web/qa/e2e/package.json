{
  "name": "callpanion-qa-e2e",
  "version": "1.0.0",
  "description": "End-to-end tests for CallPanion family care platform",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:report": "playwright show-report ../reports/playwright-report",
    "test:install": "playwright install",
    "test:setup": "npm run test:install",
    "test:auth": "playwright test tests/auth.spec.ts",
    "test:admin": "playwright test tests/family-admin.spec.ts", 
    "test:member": "playwright test tests/family-member.spec.ts",
    "test:elderly": "playwright test tests/elderly-interface.spec.ts",
    "test:invite": "playwright test tests/invite-flow.spec.ts",
    "test:security": "playwright test tests/security.spec.ts",
    "test:smoke": "playwright test --grep '@smoke'",
    "test:ci": "playwright test --reporter=junit",
    "clean": "rm -rf ../reports/*"
  },
  "keywords": [
    "playwright",
    "e2e",
    "testing",
    "callpanion",
    "family-care"
  ],
  "author": "CallPanion QA Team",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.0.0"
  },
  "dependencies": {}
}